<p id="notice"><%= notice %></p>

<h1>Listing Product Categories</h1>

    <% @product_categories.each do |product_category| %>
        <h3><%= link_to product_category.name, product_category %></h3>
        <%= link_to 'Show', product_category %>
        <%= link_to 'Edit', edit_product_category_path(product_category) %>
        <%= link_to 'Destroy', product_category, method: :delete, data: { confirm: 'Are you sure?' } %>

    <% end %>

<p><%= link_to 'New Product category', new_product_category_path %></p>
