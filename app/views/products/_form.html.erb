<%= form_for @product, :html => { :multipart => true } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p><%= select_tag(:product_category_id, options_for_select(@categories), :prompt => "Select a category") %></p>
    <p><label>Name</label><%= f.text_field :name %></p>
    <p><label>Thumbnail</label><%= f.file_field :product_image %></p>
    <p><label>Details</label><%= f.cktext_area :detail %></p>
    <p><label>Prices</label><%= f.text_field :price %></p>
    <p><label>Quantums</label><%= f.text_field :quantum %></p>
    <p><label>Note</label><%= f.cktext_area :note %></p>
    <%= f.submit %>
  </div>
<% end %>
