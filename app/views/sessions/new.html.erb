<span class="notice"><%= notice %></span>
<% if session[:user_name] %>
  <% controller.redirect_to root_path %>
<% else %>
  <%= form_tag sessions_path do %> 
    <div class="field"> 
      <%= label_tag :Username %><br /> 
      <%= text_field_tag :username %> 
    </div> 
    <div class="field"> 
      <%= label_tag :password %><br /> 
      <%= password_field_tag :password %> 
    </div> 
    <div class="actions"> 
      <%= submit_tag 'Login' %> 
    </div> 
  <% end %> 
<% end %>
